<div class="text-center">
  <div class="container align-content-center">
    <h1><%= @user.name %></h1>

    <%= image_tag user_avatar(@user) %>

    <% if @user == current_user %>
      <p class="buffer-top"><%= link_to t('pages.users.save_edit'), edit_user_path(@user), class: 'btn btn-outline-success' %></p>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <% if @user.events.any? %>
          <h3><%= t('pages.users.user_events') %></h3>
          <div class="row">
            <%= render partial: 'events/event', collection: @user.events %>
          </div>
        <% else %>
          <p class="buffer-top"><%= t('pages.users.attention') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>