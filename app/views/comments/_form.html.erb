<%= form_for [@event, comment] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: comment} %>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', placeholder: t('comments.comment.form') %>
  </div>

  <% unless user_signed_in? %>
    <div class="form-group">
      <%= f.text_field :user_name, class: 'form-control', placeholder: t('comments.comment.name') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('global.form.save'), class: 'btn btn-primary' %>
  </div>
<% end %>
