<%- if controller_name != 'sessions' %>
  <%= link_to t('pages.layout.button.sign_in'), new_session_path(resource_name), class:"btn btn-outline-info buffer-top btn-block"  %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('pages.layout.button.sign_up'), new_registration_path(resource_name), class:"btn btn-outline-info buffer-top btn-block" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('activerecord.attributes.user.password_lost'), new_password_path(resource_name), class: 'btn btn-outline-warning buffer-top btn-block' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t('links.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider),
                method: :post, class: 'btn btn-link' %><br />
  <% end %>
<% end %>
